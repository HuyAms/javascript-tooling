    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "eslint": "^7.28.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-react": "^7.24.0",
        "husky": "^6.0.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.3.1"
    }
